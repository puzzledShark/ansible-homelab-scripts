---
services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    network_mode: host
    environment:
      - PUID=1000
      - PGID=1000
      - TZ={{ timezone }}
      - VERSION=docker
    volumes:
      - {{ config }}:/config
      - {{ show_location }}:/shows
    devices:
      - /dev/dri:/dev/dri
    restart: unless-stopped
